# Ibiki SMS Environment Configuration
# Copy this file to .env and fill in your values

# =================================
# CRITICAL: Session Secret (REQUIRED)
# =================================
# This secret is used to sign JWT tokens for login sessions
# IMPORTANT: Never change this after deployment or all users will be logged out!
# Generate a random secret: openssl rand -base64 32
SESSION_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_STRING_BEFORE_DEPLOYMENT

# =================================
# Database Configuration (REQUIRED)
# =================================
# PostgreSQL connection URL - required for data persistence
# For local PostgreSQL (after running setup-postgres.sh):
DATABASE_URL=postgresql://admin:c0smic4382@localhost:5432/ibiki_sms
# For external provider (Neon, Supabase, etc.):
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# =================================
# Webhook Security (REQUIRED for Production)
# =================================
# Shared secret for authenticating ExtremeSMS webhook requests
# IMPORTANT: Set this in ExtremeSMS webhook configuration
# Generate a random secret: openssl rand -hex 32
WEBHOOK_SECRET=CHANGE_THIS_TO_A_RANDOM_SECRET_STRING_BEFORE_DEPLOYMENT

# =================================
# Email Service (Optional)
# =================================
# Required only for password reset feature
# Get API key from https://resend.com
RESEND_API_KEY=re_your_resend_api_key_here

# =================================
# Server Configuration
# =================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# =================================
# Logging
# =================================
LOG_LEVEL=info
