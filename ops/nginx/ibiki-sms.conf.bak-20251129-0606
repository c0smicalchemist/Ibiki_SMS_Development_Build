server {
  listen 80;
  server_name ibiki.run.place www.ibiki.run.place 151.243.109.79;
  return 301 https://ibiki.run.place$request_uri;
}

server {
  listen 443 ssl http2;
  server_name ibiki.run.place www.ibiki.run.place;

  ssl_certificate /etc/letsencrypt/live/ibiki.run.place/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/ibiki.run.place/privkey.pem;

  root /opt/ibiki-sms/dist/public;
  index index.html;

  include /etc/nginx/mime.types;
  default_type application/octet-stream;

  # API proxy - exact prefix, no trailing slash
  location ^~ /api {
    proxy_pass http://127.0.0.1:5000;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection 'upgrade';
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_cache_bypass $http_upgrade;
  }

  # Static assets with caching
  location /assets/ {
    try_files $uri =404;
    expires 7d;
    add_header Cache-Control "public, max-age=604800";
  }

  # SPA routing
  location / {
    try_files $uri $uri/ /index.html;
  }
}
